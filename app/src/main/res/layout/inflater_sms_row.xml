<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/sms_row_v_ripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sms_row_ll_main"
        android:layout_alignTop="@+id/sms_row_ll_main"
        android:background="@android:color/darker_gray"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/sms_row_ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sms_row_tv_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/sms_row_tv_time"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:maxLines="1"
            android:paddingTop="@dimen/dp_12"
            android:text="Medium Text"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sms_row_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sms_row_tv_sender"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:text="Medium Text"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/sms_row_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            android:text="Medium Text"
            android:textSize="@dimen/dp_12"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

    </RelativeLayout>
</RelativeLayout>